<div class="show_order_items {{{extra_classes}}}">
  <tr class="show_order_items {{{extra_classes}}}">
    <td class="show_product_n"><span class="nn">{{{n}}}</span></td>
    <td class="show_product_image" style="{{{show_product_image_hc}}}"><div style="{{{show_product_image_dn}}}">{{{img}}}</div></td>
    <td class="show_product_sku" style="{{{show_product_sku_hc}}}"><div style="{{{show_product_sku_dn}}}">{{{sku}}}</div></td>
    <td class="show_product_title_description" colspan="{{{product_description_colspan}}}">
      <span class="title">{{{title}}}</span>
      <div class="show_product_purchase_note" style="{{{show_product_purchase_note_dn}}}"><br>{{{description}}}</div>
    </td>
    <td class="show_product_qty"><span class="qty">{{{qty}}}</span></td>
    <td class="show_product_weight" style="{{{show_product_weight_hc}}}"><div style="{{{show_product_weight_dn}}}"><div class='single_weight'>{{{weight}}}</div><div class='totalweight'>{{{total_weight}}}</div></div></td>
    <td class="show_product_dimensions" style="{{{show_product_dimensions_hc}}}"><div style="{{{show_product_dimensions_dn}}}">{{{dimension}}}</div></td>
    <td class="show_product_base_price"><span class="base_price">{{{base_price}}}</span></td>
    <td class="show_discount_precent" style="{{{show_discount_precent_hc}}}"><div style="{{{show_discount_precent_dn}}}">{{{discount}}}</div></td>
    <td class="show_product_tax" style="{{{show_product_tax_hc}}}"><div style="{{{show_product_tax_dn}}}">{{{tax}}}</div></td>
    <td class="show_product_total_price" colspan="{{{product_nettotal_colspan}}}"><span class="nettotal">{{{nettotal}}}</span></td>
  </tr>
</div>
