<tr if="show_order_items" class="{{{extra_classes}}}">
  <td class="show_product_n"><span class="nn">{{{n}}}</span></td>
  <td class="show_product_image">{{{img}}}</td>
  <td class="show_product_sku"><span class="sku">{{{sku}}}</span></td>
  <td class="show_product_title_description" colspan="{{{product_description_colspan}}}"><span class="title">{{{title}}}<i class="show_product_purchase_note">{{{description}}}</i></span></td>
  <td class="show_product_qty"><span class="qty">{{{qty}}}</span></td>
  <td class="show_product_weight"><span class="weight"><span class="single_weight">{{{weight}}}</span><span class="totalweight"><br>{{{total_weight}}}</span></span></td>
  <td class="show_product_dimensions"><span class="dimension">{{{dimension}}}</span></td>
  <td class="show_product_base_price"><span class="base_price">{{{base_price}}}</span></td>
  <td class="show_discount_precent"><span class="discount_precent">{{{discount}}}</span></td>
  <td class="show_product_tax"><span class="product_tax">{{{tax}}}</span></td>
  <td class="show_product_total_price" colspan="{{{product_nettotal_colspan}}}"><span class="nettotal">{{{nettotal}}}</span></td>
</tr>
